@model MiniProject_248207.Models.Users

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginName" class="control-label"></label>
                <input asp-for="LoginName" class="form-control" readonly />
            </div>

            <!-- Full Name -->
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Email ID -->
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" type="email" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>

            <!-- Gender (Radio Buttons) -->
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div>
                    <div>
                        <input type="radio" name="Gender" value="M" @(Model.Gender == "M" ? "checked" : "") id="GenderM"/>
                        <label for="GenderM">Male</label>
                    </div>
                    <div>
                        <input type="radio" name="Gender" value="F" @(Model.Gender == "F" ? "checked" : "") id="GenderF" />
                        <label for="GenderF">Female</label>
                    </div>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <!-- City (Dropdown) -->
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.Cities"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Home">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
